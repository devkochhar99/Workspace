<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:screenOrientation="portrait"
    android:layout_height="match_parent"
    android:alpha=".7"
    android:background="@drawable/hand_voting_sign"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyVoteMyRight" >

     <Button
         android:id="@+id/button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="41dp"
         android:background="@color/sysBlue"
         android:gravity="center"
         android:text="About Us"
         android:textColor="@color/sysGray"
         android:textStyle="bold" />

     <RadioGroup
         android:id="@+id/radioGroup1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/button1"
         android:layout_below="@+id/textView2"
         android:layout_marginTop="39dp" >

         <RadioButton
             android:id="@+id/radioButton1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_alignRight="@+id/button1"
             android:layout_marginTop="27dp"
             android:onClick="select"
             android:text="Admin"
             android:textStyle="bold" />

         <RadioButton
             android:id="@+id/radioButton2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/radioButton1"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="62dp"
             android:onClick="select"
             android:text="User"
             android:textStyle="bold" />
     </RadioGroup>

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:background="@color/sysBlue"
         android:clickable="true"
         android:gravity="center"
         android:onClick="intro"
         android:text="The Ultimate Voting App"
         android:textColor="@color/sysWhite"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView2"
         android:layout_below="@+id/radioGroup1"
         android:layout_marginTop="52dp"
         android:clickable="true"
         android:onClick="perform_action"
         android:text="@string/underline"
         android:textColor="@color/sysBlue"
         android:textSize="18dp"
         android:textStyle="bold|italic" />

</RelativeLayout>