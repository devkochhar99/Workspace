<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:screenOrientation="portrait"
    android:fillViewport="false"
    android:background="@color/sysGreen">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="I. Applicant Details :"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Name :" />

      <EditText
          android:id="@+id/editText1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Enter Your Name"
          android:textColor="#0000FF"
          android:inputType="textPersonName|textCapSentences"
/>

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Age as on 1st January 2016 :" />

      
         <EditText
          android:id="@+id/editText2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:hint="Enter Your Age"
           android:textColor="#0000FF"
          android:inputType="number"
/>
      
      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Gender :" />
      
   <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        android:layout_marginLeft="20dp" />
   
   
      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Date Of Birth\n(If known) :" />
      
       <EditText
          android:id="@+id/editText3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:hint="Enter Your DOB"
           android:textColor="#0000FF"
          android:inputType="date"
/>
       
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:id="@+id/btn_date"
         android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toRightOf="@+id/editText3"
        android:layout_toEndOf="@+id/editText3" />
       
      

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Place Of Birth :" />
      
               <EditText
          android:id="@+id/editText4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
           android:textColor="#0000FF"
          android:hint="Only District"
          android:inputType="textCapSentences"
/>

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Father\&apos;s Name :" />
      
            <EditText
          android:id="@+id/editText5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Enter Father\'s Name"
           android:textColor="#0000FF"
          android:inputType="textPersonName|textCapSentences"
/>
      
      

      <TextView
          android:id="@+id/textView8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Mother\&apos;s Name :" />
      
            <EditText
          android:id="@+id/editText6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Enter Mother\'s Name"
           android:textColor="#0000FF"
          android:inputType="textPersonName|textCapSentences"
/>

      <TextView
          android:id="@+id/textView9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="II. Particulars of place of ordinary residence(Full Address) :"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textView10"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="House/Door No. :" />
      
            <EditText
          android:id="@+id/editText7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="House/Door No."
           android:textColor="#8A1592"
          android:inputType="textMultiLine"
/>

      <TextView
          android:id="@+id/textView11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Flat/Building No. :" />
      
                  <EditText
          android:id="@+id/editText8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Flat/Building No."
            android:textColor="#8A1592"
          android:inputType="textMultiLine|textCapSentences"
/>
      

      <TextView
          android:id="@+id/textView12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Street/Mohalla/Road/Area/Locality :" />
               
      <EditText
          android:id="@+id/editText9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Street/Road"
            android:textColor="#8A1592"
          android:inputType="textMultiLine|textCapSentences"
/>
      

      <TextView
          android:id="@+id/textView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Town/Village" />
      
                        <EditText
          android:id="@+id/editText10"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Town/Village"
            android:textColor="#8A1592"
          android:inputType="text|textCapSentences"
/>

     
      
      
      <TextView
          android:id="@+id/textView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Tehsil/Taluka/Mandal :" />
      
                                 <EditText
          android:id="@+id/editText11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Tehsil"
            android:textColor="#8A1592"
          android:inputType="text|textCapSentences"
/>

      <TextView
          android:id="@+id/textView16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="District :" />
      
                                 <EditText
          android:id="@+id/editText12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="District"
            android:textColor="#8A1592"
          android:inputType="text|textCapSentences"
/>

                                  <TextView
          android:id="@+id/textView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Pin Code :" />

                           <EditText
          android:id="@+id/editText13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Pin Code(6 Digit)"
          android:inputType="number"
            android:textColor="#8A1592"
          android:maxLength="6"
/>
      <TextView
          android:id="@+id/textView17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="State :" />
      
                                 <EditText
          android:id="@+id/editText14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="State"
            android:textColor="#8A1592"
          android:inputType="text|textCapSentences"
/>

      <TextView
          android:id="@+id/textView18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="III. Account Information :"
          android:textStyle="bold" />
      
       <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Username(will be used whenever you login) :" />

       <EditText
          android:id="@+id/editText15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Enter Username"
            android:textColor="#FB4001"
          android:inputType="text"
/>

      <TextView
          android:id="@+id/textView20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="E-Mail ID :" />

       <EditText
          android:id="@+id/editText16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="E-Mail ID"
          android:textColor="#FB4001"
          
          android:inputType="textEmailAddress"
/>
      <TextView
          android:id="@+id/textView21"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Phone No. :" />
      
          <EditText
          android:id="@+id/editText17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Mobile No."
                      android:textColor="#FB4001"
          
          android:inputType="phone"
          android:maxLength="10"
/>

      <TextView
          android:id="@+id/textView22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Password :" />
      
              <EditText
          android:id="@+id/editText18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Password"
                      android:textColor="#FB4001"
          
          android:inputType="textPassword"
         
/>

      <TextView
          android:id="@+id/textView23"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          
          android:text="Confirm Password :" />
      
                  <EditText
          android:id="@+id/editText19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:hint="Confirm Password"
                      android:textColor="#FB4001"
          
          android:inputType="textPassword"
         
/>

      <TextView
          android:id="@+id/textView24"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="IV. Particulars for Documents :"
          android:textStyle="bold" />

      
      <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/doc"
        android:prompt="@string/document"
        android:layout_marginLeft="20dp" />

                        <EditText
                            android:id="@+id/editText20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:hint="Document Verification No."
                            android:inputType="number" />

      <Button
          android:id="@+id/button1"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:text="Create Account" />

      <Button
          android:id="@+id/button2"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="0dp"
          android:text="Clear" />

      <Button
          android:id="@+id/button3"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="0dp"
          android:text="Back" />
  </LinearLayout>

</ScrollView>