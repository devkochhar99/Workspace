<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rtv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="com.android.email.permission.READ_ATTACHMENT" />
    <uses-permission android:name="android.permission.INTERNET" />
     <uses-permission android:name="android.permission.SEND_SMS" />

     
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:persistent="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rtv.SplashScreen"
             android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rtv.MyVoteMyRight"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_my_vote_my_right" >
        </activity>
        <activity
            android:name="com.rtv.AdminLoginPage"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_admin_login_page" >
        </activity>
        <activity
            android:name="com.rtv.UserLoginPage"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_user_login_page" >
        </activity>
        <activity
            android:name="com.rtv.AboutUs"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name="com.rtv.NewUserRegistration"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_new_user_registration" >
        </activity>
        <activity
            android:name="com.rtv.VotingStatus"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_voting_status" >
        </activity>
        <activity
            android:name="com.rtv.UserForgotPassword"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_user_forgot_password" >
        </activity>
        <activity
            android:name="com.rtv.AdminForgotPassword"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_admin_forgot_password" >
        </activity>
        <activity
            android:name="com.rtv.VoteForABetterIndia"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_vote_for_abetter_india" >
        </activity>
        <activity
            android:name="com.rtv.VotedSuccessfully"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_voted_successfully" >
        </activity>
        <activity
            android:name="com.rtv.ChangePassword"
             android:screenOrientation="portrait"
            android:label="@string/title_activity_change_password" >
        </activity>
    </application>

</manifest>
